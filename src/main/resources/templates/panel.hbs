        <!-- Modal Registrar Mascota -->
        <div class="modal fade" id="staticBackdrop" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content FONDO-LAVENDER">
                    <form method="post" action="/registroMascota" enctype='multipart/form-data'>
                        <div class="modal-header">
                            <h4 class="LETRAS-DARK_VIOLET PFBEAUSANS-SEMIBOLD" id="exampleModalLabel">
                                Registro de Mascota
                            </h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                            </button>
                        </div>

                        <div class="modal-body">
                            <div class="form-row">
                                <div class="form-group mb-3">
                                    <label for="sexo" class="LBL">
                                        Tipo de Mascota
                                    </label>
                                    <select class="form-select TXTBOX" aria-label="Default select example" id="tipo" name="tipo" placeholder="Tipo Mascota">
                                        {{#each tipoMascota}}
                                            <option value="{{this}}">
                                                {{this}}
                                            </option>
                                        {{/each}}
                                    </select>
                                </div>

                                <div class="form-group mb-3">
                                    <label for="nombre" class="LBL">
                                        Nombre
                                    </label>
                                    <input class="form-control TXTBOX" id="nombre" name="nombre" placeholder="Ingrese nombre" required>
                                </div>

                                <div class="form-group mb-3">
                                    <label for="nombre" class="LBL">
                                        Apodo
                                    </label>
                                    <input class="form-control TXTBOX" id="apodo" name="apodo" placeholder="Ingrese apodo" required>
                                </div>

                                <div class="form-group mb-3">
                                    <label for="sexo" class="LBL">
                                        Sexo
                                    </label>
                                    <select class="form-select TXTBOX" aria-label="Default select example" id="sexo" name="sexo" placeholder="Sexo">
                                        {{#each sexo}}
                                            <option value="{{this}}">
                                                {{this}}
                                            </option>
                                        {{/each}}
                                    </select>
                                </div>

                                <div class="form-group mb-3">
                                    <label for="fecha" class="LBL">
                                        Fecha de Nacimiento
                                    </label>
                                    <input type="date" class="form-control TXTBOX" id="fecha" name="fecha" max='2000-13-13' placeholder="yyyy-mm-dd" required>
                                </div>

                                <div class="form-group mb-3">
                                    <label for="desc" class="LBL">
                                        Descripción
                                    </label>
                                    <textarea class="form-control TXTBOX" id="desc" name="desc" rows="10" required></textarea>
                                </div>

                                <div class="form-group mb-3">
                                    <label for="desc" class="LBL">
                                        Características
                                    </label>
                                    {{#each clavesMascota}}
                                        <input class="form-control TXTBOX" id="{{this}}" name="{{this}}" placeholder="{{this}}" required>
                                    {{/each}}

                                </div>
                                <div class="form-group mb-3">
                                    <label for="foto" class="LBL">
                                        Selección de Foto
                                    </label>
                                    <input type="file" class="form-control-file TXTBOX" id="foto" name="foto" multiple/>
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger BTN-ROJITO" data-bs-dismiss="modal">
                                Cerrar
                            </button>
                            <button type="submit" class="btn btn-primary BTN-AZULITO" id="liveAlertBtn">
                                Registrar Mascota
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- FIN Modal Registrar Mascota -->

