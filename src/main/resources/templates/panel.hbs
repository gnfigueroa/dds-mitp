        <script>
            function checkHash() {
                var toastLiveExample = document.getElementById('liveToast')
                if (location.hash === "#registroConExito") {
                    var toast = new bootstrap.Toast(toastLiveExample)
                    toast.show()
                }

                var toastLiveContacto = document.getElementById('liveToastContacto')
                if (location.hash === "#agregarContacto") {
                    var toast = new bootstrap.Toast(toastLiveContacto)
                    toast.show()
                }

                var toastLivePubliMascotaSinChapita = document.getElementById('toastLivePubliMascotaSinChapita')
                if (location.hash === "#registroMascotaConExito") {
                    var toast = new bootstrap.Toast(toastLivePubliMascotaSinChapita)
                    toast.show()
                }
                var errorToast = document.getElementById('errorToast')
                if (location.hash === "#error") {
                    var toast = new bootstrap.Toast(errorToast)
                    toast.show()
                }

                var rechazoConExitoToast = document.getElementById('rechazoConExitoToast')
                if (location.hash === "#rechazoConExito") {
                    var toast = new bootstrap.Toast(rechazoConExitoToast)
                    toast.show()
                }
                var aprobacionConExitoToast = document.getElementById('aprobacionConExitoToast')
                if (location.hash === "#aprobacionConExito") {
                    var toast = new bootstrap.Toast(aprobacionConExitoToast)
                    toast.show()
                }
                var noEsTuMascotaToast = document.getElementById('noEsTuMascotaToast')
                if (location.hash === "#noEsTuMascota") {
                    var toast = new bootstrap.Toast(noEsTuMascotaToast)
                    toast.show()
                }
            }

        </script>
        <script>
            var today = new Date();
            var dd = today.getDate();
            var mm = today.getMonth() + 1; //January is 0!
            var yyyy = today.getFullYear();

            if (dd < 10) {
                dd = '0' + dd;
            }

            if (mm < 10) {
                mm = '0' + mm;
            }

            today = yyyy + '-' + mm + '-' + dd;
            document.getElementById("fecha").setAttribute("max", today);
        </script>

