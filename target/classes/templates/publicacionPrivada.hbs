<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
        <title>Publicaci√≥n Privada</title>
        <!-- Bootstrap core CSS -->
        <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <!-- Additional CSS Files -->
        <link rel="stylesheet" href="/css/fontawesome.css">
        <link rel="stylesheet" href="/css/templatemo-plot-listing.css">
        <link rel="stylesheet" href="/css/animated.css">
        <link rel="stylesheet" href="/css/owl.css">
        <!--    TemplateMo 564 Plot Listing    https://templatemo.com/tm-564-plot-listing-->
        <link rel="stylesheet" href="/css/nuestros.css">
    </head>

    <body>
        <!-- ***** Preloader Start ***** -->
        <div id="js-preloader" class="js-preloader">
            <div class="preloader-inner">
                <span class="dot"></span>
                <div class="dots">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>
        <!-- ***** Preloader End ***** -->

        <!-- ***** Header Area Start ***** -->
        <header class="header-area header-sticky wow slideInDown animated background-header" data-wow-duration="0.75s" data-wow-delay="0s">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <nav class="main-nav">
                            <!-- ***** Logo Start ***** -->
                            <a href="/" class="logo" style="width: 70px;">
                                <img src="images/perroygato.png" style="width: 60px; height: 60px;">
                            </a>

                            <!-- ***** Logo End ***** -->
                            <a href="/">
                                <span class="PFBEAUSANS-SEMIBOLD" style="font-size: 36px; color: var(--LAVENDER); vertical-align: bottom;">GESOC</span>
                            </a>

                            <!-- ***** Menu Start ***** -->
                            {{>headerMainTemplate.hbs}}
                            <!-- ***** Menu End ***** -->
                        </nav>
                    </div>
                </div>
            </div>
        </header>
        <!-- ***** Header Area End ***** -->

        <div class="main-banner2">
            {{>ingresoModal.hbs}}
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="top-text header-text">
                            <h2></h2>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="container" style="margin-top: 40px; margin-bottom: 50px;">
            <div class="row justify-content-start">

                <div class="col-8" style="margin-top: 30px;">
                    <div class="card col-8">
                        {{#each publicacion.pathFoto}}
                            {{#if @first}}
                                <div class="carousel-item active">
                                    <img src="/{{this}}" class="d-block w-100" alt="...">
                                </div>
                            {{else}}
                                <div class="carousel-item">
                                    <img src="this" class="d-block w-100" alt="...">
                                </div>
                            {{/if}}
                        {{/each}}

                        <div class="card-body">
                            <h5 class="card-title">
                                Mascota: {{mascota.nombre}}
                            </h5>
                            <p class="card-text">
                                {{mascota.apodo}}
                            </p>
                        </div>

                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                Descripcion: {{publicacion.descripcion}}
                            </li>
                            <iframe width="100%" height="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?q={{publicacion.latitud}},{{publicacion.longitud}}
                            &hl=es&z=14&amp;output=embed">
                            </iframe>
                            <br/>
                        </ul>
                        <br>

                        <h5 class="card-title">
                            Rescatista
                        </h5>
                        <br>

                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                Nombre: {{rescatista.nombre}}
                            </li>
                            <li class="list-group-item">
                                Apellido: {{rescatista.apellido}}
                            </li>
                            <li class="list-group-item">
                                Email: {{rescatista.email}}
                            </li>
                            <li class="list-group-item">
                                Telefono: {{rescatista.telefono}}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <footer>
            {{>footerMainTemplate.hbs}}
        </footer>

        <!-- Scripts -->
        <script src="/jquery/jquery.min.js"></script>
        <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="/js/owl-carousel.js"></script>
        <script src="/js/animation.js"></script>
        <script src="/js/imagesloaded.js"></script>
        <script src="/js/custom.js"></script>

    </body>

</html>